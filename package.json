{
  "name": "birdeye-sniper-bot",
  "version": "1.0.0",
  "description": "BirdEye Sniper Bot - The fastest memecoin copy-trader Telegram bot",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "prod": "NODE_ENV=production node index.js",
    "auto-deploy": "./scripts/auto-deploy.sh deploy",
    "health": "./scripts/health-check.sh", 
    "backup": "./scripts/backup.sh",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop birdeye",
    "pm2:restart": "pm2 restart birdeye",
    "pm2:reload": "pm2 reload birdeye",
    "pm2:logs": "pm2 logs birdeye",
    "pm2:status": "pm2 status birdeye",
    "pm2:monit": "pm2 monit",
    "setup": "npm ci && mkdir -p logs && ./scripts/auto-deploy.sh status",
    "update": "git pull origin main && npm ci --production && pm2 reload birdeye",
    "deploy": "./scripts/auto-deploy.sh deploy",
    "deploy:webhook": "./scripts/auto-deploy.sh webhook",
    "deploy:status": "./scripts/auto-deploy.sh status",
    "monitor:start": "./scripts/auto-deploy-monitor.sh start",
    "monitor:stop": "./scripts/auto-deploy-monitor.sh stop",
    "monitor:restart": "./scripts/auto-deploy-monitor.sh restart",
    "monitor:status": "./scripts/auto-deploy-monitor.sh status",
    "monitor:test": "./scripts/auto-deploy-monitor.sh test",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "telegram",
    "bot",
    "memecoin",
    "sniper",
    "copy-trading",
    "solana"
  ],
  "author": "BirdEye Team",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.95.2",
    "axios": "^1.7.2",
    "bs58": "^6.0.0",
    "dotenv": "^16.6.1",
    "node-cron": "^3.0.3",
    "telegraf": "^4.16.3",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
